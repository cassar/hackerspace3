/*==========  Mobile First Method  ==========*/

/* Custom, iPhone Retina */
@media only screen and (min-device-width: 320px) and (min-width : 320px) {
  .competition_page {
    background-size: cover;
    background-position: center center;
    text-align: center;
    font-size: .8em;
    line-height: 1.5em;
    background-image: url(<%= asset_path 'sydneyback.jpg' %>);
    padding: 0;

    h1 {
      padding: 3em 0;
      margin-bottom: 0;
      background-color: rgba(255, 255, 255, 0.75);
      color: black;
      font-size: 1.5em;
    }

    nav {
      padding-bottom: 4em;
      background-color: rgba(255, 255, 255, 0.75);

      section {
        display: flex;
        justify-content: center;
        align-items: stretch;
        align-content: stretch;
        padding: 0 8em;
        flex-wrap: wrap;

        div {
          background-image: url(<%= asset_path 'cta.png' %>);
          background-size: cover;
          background-position: center center;
          transition: all 0.4s ease;
          padding: 0;
          display: flex;
          align-content: stretch;
          align-items: stretch;
          margin: 0.25em;

          a {
            display: block;
            text-decoration: none;
            color: white;
            font-size: 1.5em;
            text-align: center;
            line-height: 1.2em;
            width: 300px;
            padding: 2.5em 0.5em;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            justify-content: center;
          }

          &:nth-of-type(even) a {
            background-color: rgba(202, 30, 86, 0.5);
            border-bottom: 1em solid var(--primary);
          }

          &:nth-of-type(odd) a {
            background-color: rgba(76, 154, 210, 0.5);
            border-bottom: 1em solid var(--secondary);
          }

          &:nth-of-type(even) a:hover {
            background-color: rgba(253, 37, 107, 0.5);
            border-bottom: 1em solid var(--primary);
          }

          &:nth-of-type(odd) a:hover {
            background-color: rgba(94, 191, 261, 0.5);
            border-bottom: 1em solid var(--secondary);
          }
        }
      }
    }
  }
}

